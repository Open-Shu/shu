# Frontend environment variables (Vite)
# Copy to .env and adjust values as needed. Vite loads .env automatically when starting the dev server.

# Base URL for the Shu API (must include scheme and port)
# Example for local dev (API on 8000):
VITE_API_BASE_URL=http://localhost:8000


# Enable Chat Plugin calling in the UI (default false; enable when Chat M1 slice resumes)
VITE_CHAT_PLUGINS_ENABLED=false


# Global API timeout in milliseconds for frontend requests (Axios)
# Defaults to 90000 if unset. Increase for long-running admin/test operations.
VITE_API_TIMEOUT_MS=120000



# Chat UI configuration (sliding window renderer)
# Number of recent messages to render (non-overscanned window). See chatConfig.js for defaults.
VITE_CHAT_WINDOW_SIZE=
# Extra messages to render above/below the window (overscan). See chatConfig.js for defaults.
VITE_CHAT_OVERSCAN=
# Pixel threshold to trigger "load older" near top. See chatConfig.js for defaults.
VITE_CHAT_SCROLL_TOP_THRESHOLD_PX=
# Pixel threshold to consider "at bottom". See chatConfig.js for defaults.
VITE_CHAT_SCROLL_BOTTOM_THRESHOLD_PX=
# Page size for message fetches. See chatConfig.js for defaults.
VITE_CHAT_PAGE_SIZE=

# Summary search tuning
# Debounce for summary term search (ms); default 300
VITE_SUMMARY_SEARCH_DEBOUNCE_MS=
# Minimum token length to trigger summary search; default 3
VITE_SUMMARY_SEARCH_MIN_TERM_LENGTH=
# Max token groups returned from summary search; default 10
VITE_SUMMARY_SEARCH_MAX_TOKENS=

# Debug mode (enables verbose logging)
VITE_DEBUG=false

# Show plugin limit stats in PluginsAdmin (debug feature)
VITE_SHOW_LIMIT_STATS=0

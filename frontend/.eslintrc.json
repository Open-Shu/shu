{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["react", "react-hooks", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "ignorePatterns": ["*.json", "node_modules/", "build/", "coverage/"],
  "rules": {
    "prettier/prettier": "error",
    "react/no-unescaped-entities": "off",
    "no-empty": "off",
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error"]
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "max-lines": [
      "warn",
      {
        "max": 500,
        "skipBlankLines": true,
        "skipComments": true
      }
    ],
    "max-lines-per-function": [
      "warn",
      {
        "max": 100,
        "skipBlankLines": true,
        "skipComments": true
      }
    ],
    "complexity": ["warn", 10],
    "no-magic-numbers": [
      "warn",
      {
        "ignore": [0, 1, -1],
        "ignoreArrayIndexes": true
      }
    ]
  },
  "overrides": [
    {
      "files": ["src/**/*.{js,jsx,ts,tsx}"],
      "excludedFiles": ["src/services/api.js"],
      "rules": {
        "no-restricted-syntax": [
          "error",
          {
            "selector": "MemberExpression[property.name='data'][object.type='MemberExpression'][object.property.name='data']",
            "message": "Avoid response.data.data. Use extractDataFromResponse from services/api."
          },
          {
            "selector": "MemberExpression[property.name='success'][object.type='MemberExpression'][object.property.name='data']",
            "message": "Avoid checking response.data.success. Use HTTP status and extractDataFromResponse/formatError."
          }
        ]
      }
    },
    {
      "files": ["**/__tests__/**/*", "**/*.test.js", "**/*.test.jsx"],
      "rules": {
        "no-import-assign": "off",
        "no-magic-numbers": "off",
        "max-lines-per-function": "off",
        "max-lines": "off"
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  }
}
